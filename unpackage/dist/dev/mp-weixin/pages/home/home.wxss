u-navbar {
  background-color: #3c9cff;
}
.container {
  margin: 20rpx;
}
.status_bar {
  height: 25px;
  width: 100%;
}
.unit {
  padding: 30rpx 0;
  border-bottom: 1px silver dashed;
}
.unitname {
  margin: 20rpx 0;
  font-size: 30rpx;
}
.boxunit {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.boxunit .box_l {
  font-size: 26rpx;
  width: 15%;
}
.boxunit .box_r {
  width: 80%;
}
.box .boxitem {
  width: 40%;
  display: inline-flex;
  align-items: center;
  margin: 20rpx 5%;
}
.box .box_left {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #3c9cff;
  margin-right: 50rpx;
}
.box .box_left image {
  margin: 0;
  padding: 0;
  height: 0;
}
.box .box_right {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
}
.recent {
  display: inline-flex;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}
.ubut {
  width: 120rpx;
  margin-right: 10rpx;
}
.ubut button {
  border-radius: 0.5;
  width: 100%;
  font-size: 20rpx;
  text-align: center;
}
.active {
  background-color: #4f99ff;
}
.xzbox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.xz {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 80%;
}
.xz .boxname {
  font-size: 26rpx;
  flex: 1;
}
.xz .boxinput {
  margin: 0 20rpx;
  flex: 4;
}
.navbar {
  background: linear-gradient(#52c8f1, #85d8f3);
  font-size: 16px;
  position: -webkit-sticky;
  position: sticky;
  z-index: 999;
  top: 0;
}
.navbar .nav {
  display: flex;
  align-items: center;
}
.navbar .nav .navicon {
  padding-left: 20px;
  width: 80px;
}
.navbar .nav .navname {
  display: flex;
  justify-content: center;
  align-items: center;
}
.percent {
  width: 100%;
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
}
.percent .charts-box {
  width: 50%;
}
.own {
  width: 100%;
  display: inline-flex;
  font-size: 22rpx;
}
.own .ownbox:not(:last-child) {
  border-right: 1px silver dashed;
}
.own .ownbox {
  padding: 20rpx;
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.own .ownbox .uwntop {
  margin-bottom: 30rpx;
}
.own .ownbox .uwnbottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.own .ownbox .uwnbottom .uwnbottombox {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
  justify-content: center;
  align-items: center;
}
.shu {
  width: 100%;
}
.shu .shu1 .shu1box {
  display: inline-flex;
  justify-content: flex-start;
  margin: 0 20rpx;
}
.shu .shu2 {
  margin: 20rpx 0;
}
.shu .shu2 .shu2box {
  display: inline-flex;
  justify-content: flex-start;
  margin: 0 10rpx;
}
.shu .shu3 {
  margin: 20rpx 50rpx 20rpx 50rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  border: thick double #85d8f3;
}
.shu .shu3box {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  border-bottom: 0.5px solid #e2e2e2;
}

